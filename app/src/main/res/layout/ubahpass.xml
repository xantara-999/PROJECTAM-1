<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/gambar_ubahpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ubahpass_topback"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_kembaliubhpass"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kembali"
            android:contentDescription="Tombol Kembali"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:fontFamily="@font/poppinsmed"
            android:paddingLeft="20dp"
            android:text="Change Password"
            android:textColor="@color/black"
            android:textSize="30dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/text_oldpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/gambar_ubahpass"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="-50dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/edit_oldpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_oldpass"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-53dp"
        android:background="@drawable/round_editext"
        android:hint="Enter Your Old Password"
        android:padding="15dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/text_newpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/edit_oldpass"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="-50dp"
        android:text="New Password"
        android:textColor="@color/black"
        android:textSize="17dp" />
    <EditText
        android:id="@+id/edit_newpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_newpass"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-53dp"
        android:background="@drawable/round_editext"
        android:hint="Enter Your New Password"
        android:padding="15dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/changepass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/edit_newpass"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-90dp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/brygada"
        android:text="CHANGE"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>