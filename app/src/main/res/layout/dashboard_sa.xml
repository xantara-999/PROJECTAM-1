<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:background="@drawable/top_background"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="165dp"
        android:background="@drawable/btmrigt" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/upleft" />

    <ImageButton
        android:id="@+id/btn_profile"
        android:layout_width="87dp"
        android:layout_height="92dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/erick"
        android:contentDescription="Tombol Profile"/>
    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name User"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/inter"
        android:textSize="40dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/hello"/>


    <TextView
        android:id="@+id/viewemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hello"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="57dp"
        android:textSize="30dp"
        android:fontFamily="@font/interextrab"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="65dp"
        android:layout_height="48dp"
        android:layout_below="@id/image"
        android:layout_centerInParent="true"
        android:layout_marginTop="44dp"
        android:background="@drawable/round_btn"
        android:drawableBottom="@drawable/search"
        android:gravity="center"
        android:padding="10dp"
        android:contentDescription="Tombol Pencarian"/>
    <TextView
        android:id="@+id/search_prdct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_search"
        android:layout_centerInParent="true"
        android:text="Cari Produk"
        android:textColor="@color/white"
        android:fontFamily="@font/inknut"
        android:textSize="17dp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_below="@id/search_prdct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_summary"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/rect_btn"
                android:drawableTop="@drawable/summary"
                android:padding="14dp"
                android:contentDescription="Tombol Summary"/>

            <TextView
                android:id="@+id/summarytxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summary"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_editprdct"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/rect_btn"
                android:drawableTop="@drawable/editprdct"
                android:padding="14dp"
                android:contentDescription="Tombol Edit Produk"/>

            <TextView
                android:id="@+id/editprdct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Produk"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/layout1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_riwayat"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/rect_btn"
                android:drawableTop="@drawable/riwayat"
                android:padding="14dp"
                android:contentDescription="Tombol Riwayat Produk"/>

            <TextView
                android:id="@+id/riwayattxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Produk"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btn_editcat"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/rect_btn"
                android:drawableTop="@drawable/editcat"
                android:padding="14dp"
                android:contentDescription="Edit Category"/>

            <TextView
                android:id="@+id/edicat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Category"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>