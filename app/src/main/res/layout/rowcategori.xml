<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="14dp">
    <TextView
        android:id="@+id/nama_produk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/holtwood"
        android:textColor="@color/black"
        android:textSize="19dp"
        />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll2a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmed"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Nama kategori : " />

            <TextView
                android:id="@+id/title_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmed"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Nama Variant   : " />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2b"
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_kategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmed"
                android:textColor="@color/black"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/nama_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmed"
                android:textColor="@color/black"
                android:textSize="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/title_stock"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmed"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                 android:text="stock"/>

            <TextView
                android:id="@+id/angka_stock"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/stock_bg"
                android:hint="000"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:gravity="center"
                android:textColorHint="@color/white"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="@font/poppinsmed"
            android:textColor="@color/black"
            android:textSize="16dp"
             />
    </LinearLayout>





</LinearLayout>